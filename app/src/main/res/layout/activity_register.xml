<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/tv_Halaman_Register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Halaman Register"
        tools:layout_editor_absoluteX="149dp"
        tools:layout_editor_absoluteY="225dp" />

    <TextView
        android:id="@+id/textViewJenisKelamin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis Kelamin"
        tools:layout_editor_absoluteX="161dp"
        tools:layout_editor_absoluteY="257dp" />

    <RadioGroup
        android:id="@+id/rgGender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewJenisKelamin">

    </RadioGroup>

    <CheckBox
        android:id="@+id/cbAgree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="104dp"
        android:text="Saya setuju dengan Syarat & Ketentuan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rgGender" />

    <Button
        android:id="@+id/btn_submit_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cbAgree" />

    <RadioButton
        android:id="@+id/rbWanita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wanita"
        tools:layout_editor_absoluteX="205dp"
        tools:layout_editor_absoluteY="306dp" />

    <RadioButton
        android:id="@+id/rbPria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pria"
        tools:layout_editor_absoluteX="128dp"
        tools:layout_editor_absoluteY="306dp" />

</androidx.constraintlayout.widget.ConstraintLayout>